<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_speech"
        android:layout_alignBottom="@+id/button_speech"
        android:layout_alignParentRight="true"
        android:layout_marginRight="81dp"
        android:text="@string/button_reply" />

    <Button
        android:id="@+id/button_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/button_reply"
        android:text="@string/button_speech" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_speech"
        android:layout_alignLeft="@+id/button_speech"
        android:layout_marginBottom="31dp"
        android:singleLine="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView_operating_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_id"
        android:layout_alignLeft="@+id/editText_id"
        android:layout_marginBottom="20dp"
        android:text="@string/textView_operating_msg" />

</RelativeLayout>